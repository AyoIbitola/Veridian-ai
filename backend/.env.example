# Veridian AI Environment Configuration
# Copy this file to .env and fill in your actual values

# Project Settings
PROJECT_NAME=AI Sentinel
API_V1_STR=/v1

# Database
DATABASE_URL=sqlite+aiosqlite:///./sentinel.db

# Security
SECRET_KEY=supersecretkey  # Change this in production!
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth Providers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# AI Model APIs
# OpenRouter API Key (Required for OSE and RTS engines)
# Get your free API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Gemini API Key (Optional - for backward compatibility)
GEMINI_API_KEY=

# Notification Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SLACK_WEBHOOK_URL=
